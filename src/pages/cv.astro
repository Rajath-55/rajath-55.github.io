---
import BaseLayout from '../layouts/BaseLayout.astro';

// CV Data
const cv = {
  experience: [
    {
      company: "Nexthop AI",
      role: "Software Engineer",
      period: "Jan 2025 - Present",
      description: "SONiC OS platform development — config management, CLI, Yang modeling, and Dynamic Load Balancing. Built internal Slack notification service for distributed test runs with real-time tracking."
    },
    {
      company: "Cisco Systems",
      role: "Software Engineer II",
      period: "Aug 2023 - Dec 2024",
      description: "L2 Feature Manager / VxLAN — ESI multi-homing, Broadcom SDK upgrades, ELK+Kafka log pipelines. Achieved 2x MAC learning scale and 20% improvement in mac-learn rates."
    },
    {
      company: "Cisco Systems",
      role: "Software Engineering Intern",
      period: "May 2022 - Jun 2023",
      description: "Migrated tech-support from single to multi-threaded architecture, reducing execution time by 50%. Built event-based log cleanup tooling."
    },
  ],
  education: [
    {
      institution: "BITS Pilani, Goa",
      degree: "B.E. Computer Science — CGPA: 8.71/10",
      period: "Aug 2019 - Jun 2023",
    },
  ],
  skills: {
    technologies: ["SONiC OS", "Distributed Systems", "VxLAN", "Packet Forwarding", "Yang Modeling"],
    tools: ["Kafka", "ElasticSearch", "Logstash", "Kibana", "Postgres", "Linux", "Git", "pyATS"],
    languages: ["C", "C++", "Python", "Shell Scripting"],
  },
};
---

<BaseLayout title="CV | Rajath V" description="Rajath V's professional experience and qualifications.">
  <section class="py-24">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Header -->
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-16">
        <div class="reveal">
          <h1 class="opacity-0 animate-fade-in-up">
            <span class="font-mono text-sm uppercase tracking-[0.3em] block mb-4" style="color: var(--accent);">
              Curriculum Vitae
            </span>
            Rajath V
          </h1>
        </div>

        <div class="reveal opacity-0 animate-fade-in-up animate-stagger-1">
          <a
            href="/cv.pdf"
            download
            class="group inline-flex items-center gap-2 px-6 py-3 rounded-lg font-mono text-sm uppercase tracking-widest transition-all duration-300 hover:glow-copper"
            style="background-color: var(--accent); color: var(--bg-primary);"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Download PDF
          </a>
        </div>
      </div>

      <!-- Experience -->
      <div class="mb-16">
        <h2 class="reveal text-2xl font-display font-semibold mb-8 pb-2 border-b" style="border-color: var(--bg-tertiary);">
          Experience
        </h2>
        <div class="space-y-8">
          {cv.experience.map((job, i) => (
            <div class="reveal" style={`animation-delay: ${(i + 1) * 0.1}s`}>
              <div class="flex flex-col md:flex-row md:items-baseline md:justify-between gap-1 mb-2">
                <h3 class="text-xl font-display font-semibold" style="color: var(--text-primary);">
                  {job.role}
                </h3>
                <span class="font-mono text-sm" style="color: var(--accent);">{job.period}</span>
              </div>
              <p class="font-mono text-sm uppercase tracking-wider mb-3" style="color: var(--text-secondary);">
                {job.company}
              </p>
              <p style="color: var(--text-secondary);">{job.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Education -->
      <div class="mb-16">
        <h2 class="reveal text-2xl font-display font-semibold mb-8 pb-2 border-b" style="border-color: var(--bg-tertiary);">
          Education
        </h2>
        <div class="space-y-6">
          {cv.education.map((edu, i) => (
            <div class="reveal" style={`animation-delay: ${(i + 1) * 0.1}s`}>
              <div class="flex flex-col md:flex-row md:items-baseline md:justify-between gap-1 mb-1">
                <h3 class="text-xl font-display font-semibold" style="color: var(--text-primary);">
                  {edu.institution}
                </h3>
                <span class="font-mono text-sm" style="color: var(--accent);">{edu.period}</span>
              </div>
              <p style="color: var(--text-secondary);">{edu.degree}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Skills -->
      <div>
        <h2 class="reveal text-2xl font-display font-semibold mb-8 pb-2 border-b" style="border-color: var(--bg-tertiary);">
          Skills
        </h2>
        <div class="space-y-6">
          <div class="reveal">
            <h3 class="font-mono text-xs uppercase tracking-widest mb-3" style="color: var(--accent);">Technologies</h3>
            <div class="flex flex-wrap gap-2">
              {cv.skills.technologies.map((skill) => (
                <span class="px-3 py-1.5 rounded-full font-mono text-sm" style="background-color: var(--bg-secondary); color: var(--text-primary);">{skill}</span>
              ))}
            </div>
          </div>
          <div class="reveal">
            <h3 class="font-mono text-xs uppercase tracking-widest mb-3" style="color: var(--accent);">Tools</h3>
            <div class="flex flex-wrap gap-2">
              {cv.skills.tools.map((skill) => (
                <span class="px-3 py-1.5 rounded-full font-mono text-sm" style="background-color: var(--bg-secondary); color: var(--text-primary);">{skill}</span>
              ))}
            </div>
          </div>
          <div class="reveal">
            <h3 class="font-mono text-xs uppercase tracking-widest mb-3" style="color: var(--accent);">Languages</h3>
            <div class="flex flex-wrap gap-2">
              {cv.skills.languages.map((skill) => (
                <span class="px-3 py-1.5 rounded-full font-mono text-sm" style="background-color: var(--bg-secondary); color: var(--text-primary);">{skill}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .animate-fade-in-up {
    animation-fill-mode: forwards;
  }
</style>
