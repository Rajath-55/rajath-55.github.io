---
import ThemeToggle from './ThemeToggle.astro';

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<header class="header sticky top-0 z-50 backdrop-blur-md border-b">
  <nav class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo / Name -->
    <a
      href="/"
      class="logo font-display text-2xl font-semibold tracking-tight transition-all duration-300"
    >
      RV
    </a>

    <!-- Navigation -->
    <div class="flex items-center gap-8">
      <ul class="flex items-center gap-6">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                'nav-link font-body text-sm uppercase tracking-widest transition-colors duration-200',
                currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                  ? 'active'
                  : ''
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  .header {
    background-color: rgba(245, 240, 232, 0.85);
    border-color: rgba(224, 217, 204, 0.5);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  :global(.dark) .header {
    background-color: rgba(17, 24, 39, 0.9);
    border-color: rgba(55, 65, 81, 0.5);
  }

  .logo {
    color: var(--text-primary);
  }

  .logo:hover {
    color: var(--accent);
  }

  .nav-link {
    color: var(--text-secondary);
  }

  .nav-link:hover {
    color: var(--accent);
  }

  .nav-link.active {
    color: var(--accent);
    font-weight: 600;
  }

  :global(.dark) .nav-link {
    color: rgba(245, 240, 232, 0.7);
  }

  :global(.dark) .nav-link:hover,
  :global(.dark) .nav-link.active {
    color: #D4956A;
  }
</style>
