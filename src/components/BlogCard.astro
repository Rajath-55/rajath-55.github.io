---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
}

const { title, description, pubDate, slug } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group">
  <a href={`/blog/${slug}`} class="block p-6 rounded-lg transition-all duration-300 hover:glow-copper" style="background-color: var(--bg-secondary);">
    <time class="font-mono text-xs uppercase tracking-widest" style="color: var(--accent);">
      {formattedDate}
    </time>

    <h3 class="mt-3 text-xl font-display font-semibold transition-colors duration-300 group-hover:text-gradient" style="color: var(--text-primary);">
      {title}
    </h3>

    <p class="mt-3 text-base leading-relaxed" style="color: var(--text-secondary);">
      {description}
    </p>

    <span class="inline-flex items-center gap-2 mt-4 font-mono text-sm uppercase tracking-wider transition-all duration-300 group-hover:gap-3" style="color: var(--accent);">
      Read more
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </span>
  </a>
</article>
